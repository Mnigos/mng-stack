{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nest.js",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist"
  }
}
